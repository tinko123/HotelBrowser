@model IEnumerable<HotelIndexServiceModel> 
@{ 
	ViewData["Title"] = "Home Page";
	var hotels = Model.ToList();
} 
@if (!hotels.Any()) 
{ <div class="mt-4 p-5 bg-light">
	<h1 class="display-4">Welcome to the best place for finding satisfaction for your holiday!</h1> 
	<p class="lead"> 
		There are no hotels in the system currently available so why don't you just add one?
	</p>
	<hr class="my-4">
	<p class="lead"> 
		@if (User.Identity.IsAuthenticated) 
		{
			<a asp-controller="Hotel" asp-action="AddHotel" class="btn btn-primary btn-lg"
			role="button">Add House</a> 
		}
		</p>
	</div>
} 
		<div class="mb-5"></div>
		<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-inner"> 
				@for (int i = 0; i < hotels.Count(); i++) 
				{
					var hotel = hotels[i];
					<div class="carousel-item @(i == 0 ? "active" : string.Empty)"> 
						<img class="d-block w-100" style="height:500px" 
						src="@hotel.ImageURL" alt="@hotel.Name">
				<h2>@hotel.Name</h2>
					</div>
				

				} 
			</div> 
			<button class="carousel-control-prev" type="button" data-bs
			-target="#carouselExampleControls" data-bs-slide="prev"> 
			<span class="carousel-control-prev-icon" aria-hidden="true">

			</span> <span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
			data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span> 
			<span class="visually-hidden">Next</span>
			</button> 
		</div>