@model ReservationViewModel

@{
    ViewBag.Title = "Make Reservation";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="MakeReservation">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.Image" alt="Hotel Image">
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="FreeRooms" class="control-label"></label>
                <input asp-for="FreeRooms" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <input type="submit" value="Done" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
