@model IEnumerable<AllHotelsViewModel> 
@{
	ViewBag.Title = "All Hotels";
}
<h2 class="text-center">@ViewBag.Title</h2> 
<hr />
<div class="d-grid gap-2 mb-2">
	<a asp-controller="Hotel" asp-action="Add" class="btn btn-primary">Add Hotel</a>
</div>


@if (Model.Count() > 0) 
{ 
	<div class="row"> 
		@foreach (var hotel in Model) 
		{
			<div class="col-sm-6">
				<div class="card ">
					<div class="card-body">
						<div class="d-grid gap-2 mb-2">
							<img class="card-img-top" src=@hotel.Image>
						</div>	
						<h4 class="card-title text-center">@hotel.Name</h4>
						<p class="card-text">Description: @hotel.Description</p>
						<p class="card-text">Owner: @hotel.Owner</p>
						<p class="card-text">Location: @hotel.Location</p>
						<p class="card-text">Price for one night: @hotel.Price</p>
						<p class="card-text">Number of free rooms: @hotel.FreeRooms</p>
						<div class="d-grid gap-2 mb-2">
							<a asp-controller="Booking" asp-action="MakeReservation" class="btn btn-success">Make Reservation</a>
						</div>
						@if (User?.Identity?.Name == hotel.Owner)
						{
							<div class="d-grid gap-2 mb-2">
							<a asp-controller="Hotel" asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-warning">Edit Hotel Information</a>
							</div>
							<div class="d-grid gap-2 mb-2">
								<a asp-controller="Hotel" asp-action="Delete" asp-route-id="@hotel.Id" class="btn btn-danger">Delete Hotel</a>
							</div>
						}
					</div>
				</div>
			</div>
		}
	</div> 
}
else 
{ 
	<p class="text-center">No hotels yet!</p>
}